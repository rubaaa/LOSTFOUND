<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    card_view:cardBackgroundColor="@color/TRANS"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="89dp"
            android:layout_height="97dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/post_description_image"
            android:scaleType="fitXY"
            android:layout_margin="10dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:id="@+id/descTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="sans-serif-thin"
                android:padding="10dp"
                android:text="@string/desctxt"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold" />






                <TextView
                    android:id="@+id/Date"
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_margin="7.5dp"
                    android:padding="0dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <TextView
                android:id="@+id/TextMe"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="7.5dp"
                android:background="#54abee"
                android:padding="0dp"
                android:text="DM"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/textStatus"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="end"
                android:layout_margin="0dp"
                android:background="#54abee"
                android:padding="0dp"
                android:text="DM"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <Button
                android:id="@+id/found"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="end"
                android:layout_margin="0dp"
                android:background="#017201"
                android:text="Reunited"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/notfound"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="end"
                android:layout_margin="0dp"
                android:background="#720112"
                android:text="Lost"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>