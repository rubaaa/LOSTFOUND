<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Posts.Form"
    android:background="@color/TRANS"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="37dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            />

    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        tools:context=".SignUp_SignIn.SignUpActivity">


        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/imgs" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="409dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:orientation="vertical"
                android:paddingLeft="34dp"
                android:paddingRight="34dp">

                <TextView
                    android:id="@+id/ViewText4"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:backgroundTint="#ADCCE2"
                    android:fontFamily="sans-serif"
                    android:hint=" Date:"
                    android:paddingBottom="0dp"
                    android:textColor="#2196F3"
                    android:textColorHint="#2196F3"
                    android:textSize="20sp"


                    />

                <TextView
                    android:id="@+id/textView10"

                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:backgroundTint="#ADCCE2"
                    android:fontFamily="sans-serif"
                    android:paddingBottom="0dp"
                    android:text="00/00/0000"
                    android:textColor="#2196F3"
                    android:textColorHint="#2196F3"
                    android:textSize="20sp"


                    />



                <TextView
                    android:id="@+id/ViewText3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:backgroundTint="#2196F3"
                    android:fontFamily="sans-serif"
                    android:hint=" Item Descreption:"
                    android:paddingBottom="0dp"
                    android:textColor="#2196F3"
                    android:textColorHint="#2196F3"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editTextEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#2196F3"
                    android:fontFamily="sans-serif"
                    android:inputType="textMultiLine"
                    android:paddingBottom="15dp"
                    android:textColor="#2196F3"
                    android:textColorHint="#2196F3"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/ViewText2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:backgroundTint="#ADCCE2"
                    android:fontFamily="sans-serif"
                    android:hint=" Location:"
                    android:paddingBottom="0dp"
                    android:textColor="#2196F3"
                    android:textColorHint="#2196F3"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:id="@+id/ViewTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:backgroundTint="#ADCCE2"
                    android:fontFamily="sans-serif"
                    android:hint=" Category:"
                    android:paddingBottom="0dp"
                    android:textColor="#ADCCE2"
                    android:textColorHint="#2196F3"
                    android:textSize="20sp" />


                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="333dp"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown" />


                <Button
                    android:id="@+id/buttonSubmet"
                    android:layout_width="192dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="7dp"
                    android:background="#54abee"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/buttonCancel"
                    android:layout_width="192dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="7dp"
                    android:background="#54abee"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="20sp"
                    />


            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone" />


        </RelativeLayout>


    </LinearLayout>


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>